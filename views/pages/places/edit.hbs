<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-6">

      <h1>Edit {{title}}</h1>
      <hr>

      <form action="/places/edit?place_id={{id}}" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name" value="{{name}}">
        </div>
        <div class="form-group">
          <label for="desc">Description</label>
          <input type="text" class="form-control" id="desc" name="description" value="{{description}}">
        </div>
        <div class="form-row">
        
          <div class="col">
        
            <div class="form-group">
              <label for="latitude">Latitude</label>
              <input name="latitude" type="text" class="form-control" id="latitude" value="{{location.coordinates.[0]}}">
            </div>
        
          </div>
          <div class="col">
        
            <div class="form-group">
              <label for="longitude">Longitude</label>
              <input name="longitude" type="text" class="form-control" id="longitude" value="{{location.coordinates.[1]}}">
            </div>
          </div>
        </div>

        <input hidden id="hidden-id" type="text" value="{{id}}">

        <button type="submit" class="btn btn-dark btn-block">Save Changes</button>
      </form>

      <form action="/places/delete?place_id={{id}}" method="POST">
      <button type="submit" id="delete-place" class="btn  btn-block btn-delete">Delete Place</button>
      </form>

    </div>
  </div>
</div>