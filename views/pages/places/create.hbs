<div class="container">

  <div class="row justify-content-center">
    <div class="col-md-6">

      <h1>Include your favourite place</h1>
      <hr>

      <form action="/places/create" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
          <label for="desc">Description</label>
          <input type="text" class="form-control" id="desc" name="description">
        </div>

        <div class="form-row">
        
          <div class="col">
        
            <div class="form-group">
              <label for="latitude">Latitude</label>
              <input name="latitude" type="text" class="form-control" id="latitude">
            </div>
        
          </div>
          <div class="col">
        
            <div class="form-group">
              <label for="longitude">Longitude</label>
              <input name="longitude" type="text" class="form-control" id="longitude">
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-dark btn-block">Send Place</button>

        {{#if errorMessage}}
        <div id="error">
          <p>{{{errorMessage}}}</p>
        </div>
        {{/if}}
      </form>

    </div>
  </div>
</div>